<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Trained" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/nightBackground</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/nightBackground</item>
        <item name="android:navigationBarColor">@color/nightCard</item>

    </style>

    <style name="upBarStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar" >
        <item name="android:background">@color/nightBackground</item>
    </style>

<!--    TextView-->

    <style name="textMainContext" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/source_code_pro_semi_bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/mainWhite</item>
    </style>

    <style name="textSecondContext" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/source_code_pro_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/mainWhite</item>
    </style>

    <style name="textAllightContext" parent="TextAppearance.AppCompat" >
        <item name="android:fontFamily">@font/source_code_pro_semi_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/mainWhite</item>
    </style>

    <style name="textForCardView" parent="TextAppearance.AppCompat" >
        <item name="android:fontFamily">@font/source_code_pro_semi_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/mainBlack</item>
    </style>

    <style name="textNameWeek" parent="TextAppearance.AppCompat" >
        <item name="android:fontFamily">@font/source_code_pro_semi_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textChangeTheme" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/source_code_pro_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/mainWhite</item>
        <item name="android:text">@string/welcome_to_black_theme</item>
    </style>

<!--    -->

<!--    MaterialButton-->

    <style name="mainMaterialButton" parent="Widget.MaterialComponents.Button" >
        <item name="cornerRadius">18dp</item>
        <item name="android:backgroundTint">@color/mainWhite</item>
        <item name="android:textColor">@color/mainBlack</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="smallMaterialButton" parent="Widget.MaterialComponents.Button" >
        <item name="cornerRadius">18dp</item>
        <item name="android:backgroundTint">@color/mainWhite</item>
        <item name="android:textColor">@color/mainBlack</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_width">140dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

<!--    -->

<!-- CardView-->

    <style name="cardViewHomeTrainState" parent="CardView" >
        <item name="android:backgroundTint">@color/mainWhite</item>
        <item name="android:tint">@android:color/transparent</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">26dp</item>
    </style>

<!--    -->

<!--    ImageButton-->

    <style name="imgButtonMore" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:tint">@color/mainWhite</item>
    </style>

    <style name="imageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="imageButtonDayWorkout" parent="Widget.AppCompat.ImageButton" >
        <item name="android:tint">@color/mainBlack</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="imageButtonChangeTheme" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:src">@drawable/ic_moon</item>
    </style>


    <!--    -->

    <!--    EditText-->

    <style name="editText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/edit_text_main_black</item>
        <item name="android:textColor">@color/mainWhite</item>
        <item name="android:textColorHint">@color/mainWhite</item>
    </style>

    <!--    -->


<!--    More-->

    <style name="bottomNavView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/nightCard</item>
        <item name="itemIconTint">@color/bottom_nav_ic_black</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="itemIconSize">30dp</item>
    </style>

    <style name="imageViewForCardHomeState" parent="Widget.AppCompat.ImageButton" >
        <item name="android:tint">@color/mainBlack</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="SwitchMain" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:thumbTint">@color/white</item>
        <item name="android:trackTint">@color/mainWhite</item>
        <item name="android:fontFamily">@font/source_code_pro_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/mainWhite</item>
    </style>


    <style name="mainRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/radion_white_button_selector</item>
        <item name="android:backgroundTint">@color/secondAccent</item>
    </style>

<!--    -->
</resources>