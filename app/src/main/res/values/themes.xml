<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Trained" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/mainWhite</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/mainWhite</item>

        <item name="android:windowLightStatusBar">true</item>
    </style>

<!--    TextView-->

    <style name="textMainContext" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/source_code_pro_semi_bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/mainBlack</item>
    </style>

    <style name="textSecondContext" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/source_code_pro_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/mainBlack</item>
    </style>

    <style name="textAllightContext" parent="TextAppearance.AppCompat" >
        <item name="android:fontFamily">@font/source_code_pro_semi_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/mainBlack</item>
    </style>

    <style name="textForCardView" parent="TextAppearance.AppCompat" >
        <item name="android:fontFamily">@font/source_code_pro_semi_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/mainWhite</item>
    </style>

    <style name="textSecondCardView" parent="TextAppearance.AppCompat" >
        <item name="android:fontFamily">@font/source_code_pro_semi_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/mainBlack</item>
    </style>

    <style name="textNameWorkout" parent="TextAppearance.AppCompat" >
        <item name="android:fontFamily">@font/source_code_pro_semi_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/mainBlack</item>
    </style>

    <style name="textTimeMain" parent="TextAppearance.AppCompat" >
        <item name="android:textSize">150sp</item>
        <item name="android:textColor">@color/secondGrey</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

<!--    -->


<!--    MaterialButton-->

    <style name="mainMaterialButton" parent="Widget.MaterialComponents.Button" >
        <item name="cornerRadius">18dp</item>
        <item name="android:backgroundTint">@color/mainBlack</item>
        <item name="android:textColor">@color/mainWhite</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="smallMaterialButton" parent="Widget.MaterialComponents.Button" >
        <item name="cornerRadius">18dp</item>
        <item name="android:backgroundTint">@color/mainBlack</item>
        <item name="android:textColor">@color/mainWhite</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_width">140dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

<!--    -->

<!--    CardView-->

    <style name="cardViewLogoMain" parent="CardView">
        <item name="android:backgroundTint">@color/mainWhite</item>
        <item name="android:tint">@android:color/transparent</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">600dp</item>
    </style>

    <style name="cardViewHomeTrainState" parent="CardView" >
        <item name="android:backgroundTint">@color/mainBlack</item>
        <item name="android:tint">@android:color/transparent</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">26dp</item>
    </style>

    <style name="cardViewMainState" parent="CardView" >
        <item name="cardBackgroundColor">@color/mainAccent</item>
        <item name="android:tint">@android:color/transparent</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">15dp</item>
    </style>

    <style name="cardViewWorkoutHome" parent="CardView" >
        <item name="android:backgroundTint">@color/mainAccent</item>
        <item name="android:tint">@android:color/transparent</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">15dp</item>
    </style>

<!--    -->

<!--    ImageButton-->

    <style name="imgButtonMore" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:tint">@color/mainBlack</item>
    </style>


    <style name="imageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/black</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!--    -->

<!--    EditText-->

    <style name="editText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/edit_text_main_white</item>
        <item name="android:textColor">@color/mainBlack</item>
        <item name="android:textColorHint">@color/mainBlack</item>
    </style>

<!--    -->

<!--    More-->

    <style name="bottomNavView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/mainWhite</item>
        <item name="itemIconTint">@color/bottom_nav_ic</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="itemIconSize">30dp</item>
    </style>

    <style name="imageViewForCardHomeState" parent="Widget.AppCompat.ImageButton" >
        <item name="android:tint">@color/secondAccent</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>



    <!--    -->

</resources>